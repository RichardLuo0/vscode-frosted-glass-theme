{
  "name": "frosted-glass-theme",
  "displayName": "Frosted Glass Theme",
  "icon": "icon/icon.png",
  "galleryBanner": {
    "color": "#4b0082",
    "theme": "dark"
  },
  "publisher": "RichardLuo",
  "description": "Bring frosted glass menu (like windows acrylic or mac os) to your vscode!",
  "version": "0.8.6",
  "repository": {
    "type": "git",
    "url": "https://github.com/RichardLuo0/vscode-frosted-glass-theme"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "acrylic",
    "fluent",
    "mac",
    "macos",
    "animation",
    "transparent",
    "theme",
    "blur",
    "effect",
    "menu",
    "mica",
    "windows",
    "windows11",
    "windows10",
    "winui"
  ],
  "extensionKind": [
    "ui"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "frosted-glass-theme.enableTheme",
        "title": "Frosted Glass Theme: Enable"
      },
      {
        "command": "frosted-glass-theme.disableTheme",
        "title": "Frosted Glass Theme: Disable"
      },
      {
        "command": "frosted-glass-theme.applyConfig",
        "title": "Frosted Glass Theme: Apply Configuration"
      },
      {
        "command": "frosted-glass-theme.setup",
        "title": "Frosted Glass Theme: Setup"
      },
      {
        "command": "frosted-glass-theme.openCSS",
        "title": "Frosted Glass Theme: Open CSS"
      },
      {
        "command": "frosted-glass-theme.openJS",
        "title": "Frosted Glass Theme: Open JS"
      },
      {
        "command": "frosted-glass-theme.openConfig",
        "title": "Frosted Glass Theme: Open Config (readonly)"
      }
    ],
    "configuration": [
      {
        "title": "General",
        "properties": {
          "frosted-glass-theme.filter": {
            "type": "object",
            "order": 0,
            "default": {
              "default": "url(#fgt-acrylic-{key})",
              "minimap": "blur(30px)",
              "decorationsOverviewRuler": "blur(30px)",
              "terminalOverlay": "blur(30px)"
            },
            "description": "The filter used for frosted glassed effect. Check README for detailed description.",
            "patternProperties": {
              ".*": {
                "type": [
                  "string",
                  "object"
                ],
                "properties": {
                  "filter": {
                    "type": "string"
                  },
                  "disableBackgroundColor": {
                    "type": "boolean"
                  },
                  "opacity": {
                    "type": "number"
                  }
                }
              }
            }
          },
          "frosted-glass-theme.transition": {
            "type": "string",
            "order": 1,
            "default": "300ms",
            "description": "CSS transition."
          },
          "frosted-glass-theme.svg": {
            "type": "array",
            "order": 2,
            "default": [
              "../resource/mica.svg"
            ],
            "description": "The svg that gets loaded on start. No tint (ie. no element current background info).",
            "items": {
              "type": "string"
            }
          },
          "frosted-glass-theme.tintSvg": {
            "type": "array",
            "order": 3,
            "default": [
              "../resource/acrylic.svg"
            ],
            "markdownDescription": "The tint svg that gets loaded on start. `--fgt-current-background` indicts current element background color.",
            "items": {
              "type": "string"
            }
          },
          "frosted-glass-theme.variable": {
            "type": "object",
            "order": 4,
            "default": {
              "fgt-luminosity-opacity": "45%",
              "fgt-mica-luminosity": "hsl(0, 0%, 80%)",
              "fgt-mica-brightness": "",
              "fgt-animation-curve": "300ms cubic-bezier(0, 0.8, 0.2, 1) 0s 1 forwards"
            },
            "description": "CSS variable. You may use them in settings and svg.",
            "patternProperties": {
              ".*": {
                "type": "string"
              }
            }
          },
          "frosted-glass-theme.variableDark": {
            "type": "object",
            "order": 5,
            "default": {
              "fgt-luminosity-opacity": "85%",
              "fgt-mica-luminosity": "hsl(0, 0%, 20%)",
              "fgt-mica-brightness": "brightness(30%)"
            },
            "description": "CSS variable in dark mode. You may use them in settings and svg.",
            "patternProperties": {
              ".*": {
                "type": "string"
              }
            }
          },
          "frosted-glass-theme.additionalStyle": {
            "type": "array",
            "order": 6,
            "default": [],
            "description": "Additional style paths. They will be appended to <head>. You can add custom animations or styles.",
            "items": {
              "type": "string"
            }
          }
        }
      },
      {
        "title": "Opacity",
        "properties": {
          "frosted-glass-theme.opacity.selection": {
            "type": "number",
            "default": 1,
            "description": "Menu selection opacity. This will blend into your theme color."
          },
          "frosted-glass-theme.opacity.border": {
            "type": "number",
            "default": 0.4,
            "description": "Border opacity. This will blend into your theme color."
          },
          "frosted-glass-theme.opacity.separator": {
            "type": "number",
            "default": 0.7,
            "description": "Menu separator opacity. This will blend into your theme color."
          },
          "frosted-glass-theme.opacity.minimap": {
            "type": "number",
            "default": 0.4,
            "description": "Minimap opacity."
          }
        }
      },
      {
        "title": "Animation",
        "properties": {
          "frosted-glass-theme.animation.menu": {
            "type": "string",
            "default": "var(--fgt-animation-curve) fgtDropdown",
            "description": "CSS animation for menu. Set to blank to use vscode default animation."
          },
          "frosted-glass-theme.animation.dialog": {
            "type": "string",
            "default": "var(--fgt-animation-curve) fgtZoomIn",
            "description": "CSS animation for dialog. Set to blank to use vscode default animation."
          },
          "frosted-glass-theme.animation.dropdown": {
            "type": "string",
            "default": "var(--fgt-animation-curve) fgtDropdown",
            "description": "CSS animation for dropdown. Set to blank to use vscode default animation."
          },
          "frosted-glass-theme.animation.hover": {
            "type": "string",
            "default": "",
            "description": "CSS animation for hover. Set to blank to use vscode default animation."
          }
        }
      },
      {
        "title": "Reveal Effect",
        "properties": {
          "frosted-glass-theme.revealEffect.enabled": {
            "type": "boolean",
            "default": true,
            "order": 0,
            "description": "Enable reveal effect."
          },
          "frosted-glass-theme.revealEffect.opacity": {
            "type": "number",
            "default": 0.1,
            "markdownDescription": "Reveal effect gradient opacity. The color can be controlled by `menu.selectionBackground` inside `#workbench.colorCustomizations#`."
          },
          "frosted-glass-theme.revealEffect.gradientSize": {
            "type": "number",
            "default": 200,
            "description": "Reveal effect gradient size."
          },
          "frosted-glass-theme.revealEffect.clickEffect": {
            "type": "boolean",
            "default": true,
            "description": "Enable click effect."
          },
          "frosted-glass-theme.revealEffect.focusBackground": {
            "type": "boolean",
            "default": true,
            "description": "Enable background for focused menu items."
          },
          "frosted-glass-theme.revealEffect.disableForDisabledItem": {
            "type": "boolean",
            "default": false,
            "description": "Disable reveal effect for disabled menu item."
          }
        }
      },
      {
        "title": "Border Radius",
        "properties": {
          "frosted-glass-theme.borderRadius.menu": {
            "type": "string",
            "default": "",
            "description": "Menu border radius (with unit). Set to blank to use default."
          },
          "frosted-glass-theme.borderRadius.menuItem": {
            "type": "string",
            "default": "",
            "description": "Menu item border radius (with unit). Set to blank to use default."
          },
          "frosted-glass-theme.borderRadius.suggestWidget": {
            "type": "string",
            "default": "",
            "description": "Editor widget border radius (with unit). Set to blank to use default."
          }
        }
      },
      {
        "title": "Fake Mica",
        "properties": {
          "frosted-glass-theme.fakeMica.enabled": {
            "type": "boolean",
            "default": false,
            "description": "Enable fake mica.",
            "order": 0
          },
          "frosted-glass-theme.fakeMica.url": {
            "type": "string",
            "default": "C:/Windows/Web/Wallpaper/Windows/img0.jpg",
            "markdownDescription": "Url to wallpaper. Default to windows default wallpaper. For spotlight, you can use `C:/Users/<username>/AppData/Roaming/Microsoft/Windows/Themes/CachedFiles/<Something>.jpg`.",
            "order": 1
          },
          "frosted-glass-theme.fakeMica.filter": {
            "type": "string",
            "default": "url(#fgt-mica) var(--fgt-mica-brightness)",
            "description": "The filter used for fake mica background.",
            "order": 2
          },
          "frosted-glass-theme.fakeMica.titlebarFix": {
            "type": "boolean",
            "default": true,
            "description": "Fix titlebar opacity."
          },
          "frosted-glass-theme.fakeMica.titlebarOpacity": {
            "type": "number",
            "default": 0.8,
            "description": "Titlebar opacity if titlebarFix is true."
          },
          "frosted-glass-theme.fakeMica.listBackgroundFix": {
            "type": "boolean",
            "default": true,
            "description": "Fix list background by making it transparent."
          },
          "frosted-glass-theme.fakeMica.editorBackgroundFix": {
            "type": "boolean",
            "default": true,
            "markdownDescription": "Fix editor overlapping background. Leave `editor-container` as the final color."
          }
        }
      },
      {
        "title": "Miscellaneous",
        "properties": {
          "frosted-glass-theme.miscellaneous.progressBarBehindSectionHeader": {
            "type": "boolean",
            "default": false,
            "markdownDescription": "Put progressBar behind sectionHeader so it glows behind header blur."
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -noEmit && node ./build.mjs",
    "lint": "eslint src --ext ts",
    "watch": "node ./build.mjs watch",
    "pretest": "npm run lint",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^22.5.0",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.64.0",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "0.23.1",
    "eslint": "^9.9.1",
    "generate-license-file": "^3.5.1",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@vscode/sudo-prompt": "^9.3.1",
    "fluent-reveal-effect": "^3.0.11",
    "uuid": "^10.0.0"
  }
}